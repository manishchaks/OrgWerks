<h1>Listing links</h1>

<table>
  <thead>
    <tr>
      <th>Prefix</th>
      <th>Site url</th>
      <th>Tld</th>
      <th>Page url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.prefix %></td>
        <td><%= link.site_url %></td>
        <td><%= link.tld %></td>
        <td><%= link.page_url %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

